<?xml version="1.0"?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config http://xmlns.oracle.com/coherence/coherence-cache-config/1.2/coherence-cache-config.xsd">
  <defaults>
		<serializer>pof</serializer>
		<socket-provider>
			<tcp />
		</socket-provider>
	</defaults>

	<caching-scheme-mapping>
		<cache-mapping>
			<cache-name>*</cache-name>
			<scheme-name>DefaultPartitionedPofScheme</scheme-name>
		</cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>
		<distributed-scheme>
			<scheme-name>DefaultPartitionedPofScheme</scheme-name>
			<service-name>PartitionedPofCacheService</service-name>
			<serializer>
				<instance>
					<class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
					<init-params>
						<init-param>
							<param-type>String</param-type>
							<param-value>process-pof-config.xml</param-value>
						</init-param>
					</init-params>
				</instance>
			</serializer>
			<backing-map-scheme>
				<local-scheme>
					<high-units>250MB</high-units>
					<unit-calculator>binary</unit-calculator>
				</local-scheme>
			</backing-map-scheme>
			<autostart>true</autostart>
		</distributed-scheme>

	</caching-schemes>
</cache-config>
